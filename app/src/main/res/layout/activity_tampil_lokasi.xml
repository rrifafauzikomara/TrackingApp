<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff"
        tools:context="com.example.rrifafauzikomara.proyek2.Tracking.TampilLokasi">
        <fragment
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="450dp"/>
        <LinearLayout
            android:id="@+id/abc"
            android:layout_below="@+id/map"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/txt_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:hint="Id Lokasi"
                    android:background="@android:drawable/editbox_background_normal"/>
                <EditText
                    android:id="@+id/txt_idkendaraan"
                    android:layout_marginBottom="10dp"
                    android:hint="Id Kendaraan"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background_normal"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_below="@+id/abc"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:id="@+id/fab_add"
                    android:onClick="tambah"
                    app:fab_icon="@drawable/ic_simpan"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"/>

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:id="@+id/fab_back"
                    android:onClick="back"
                    app:fab_icon="@drawable/ic_back"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"/>
        </RelativeLayout>
</RelativeLayout>

