<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    android:id="@+id/cardview"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="8dp">

    <GridLayout
        android:id="@+id/grid1"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:layout_below="@+id/ly2">

        <TextView
            android:id="@+id/idText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="1"
            android:text="Id Lokasi "/>

        <TextView
            android:id="@+id/idValue"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="1"/>

        <TextView
            android:id="@+id/namaText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="3"
            android:text="Nama Lokasi "/>

        <TextView
            android:id="@+id/namaValue"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="3"/>

        <TextView
            android:id="@+id/lngText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="5"
            android:text="Longitude "/>

        <TextView
            android:id="@+id/lngValue"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="5"/>

        <TextView
            android:id="@+id/latText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="7"
            android:text="Latitude "/>

        <TextView
            android:id="@+id/latValue"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="7"/>

        <TextView
            android:id="@+id/dateText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="9"
            android:text="Tanggal "/>

        <TextView
            android:id="@+id/dateValue"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="9"/>

        <TextView
            android:id="@+id/timeText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="11"
            android:text="Jam "/>

        <TextView
            android:id="@+id/timeValue"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="11"/>

        <TextView
            android:id="@+id/idkText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="13"
            android:text="Id Kendaraan "/>

        <TextView
            android:id="@+id/idkValue"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="13"/>

        <Space
            android:layout_width="21dp"
            android:layout_height="1dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0" />

        <Space
            android:layout_width="101dp"
            android:layout_height="1dp"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0" />

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2" />

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4" />
        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="6" />
        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="8" />
        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="10" />
        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="12" />
        <Space
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="13" />

    </GridLayout>

</androidx.cardview.widget.CardView>