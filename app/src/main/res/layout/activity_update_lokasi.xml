<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context="com.example.rrifafauzikomara.proyek2.Tracking.UpdateLokasi">

    <GridLayout
        android:id="@+id/grid1"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4">

        <TextView
            android:id="@+id/idText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="1"
            android:text="Id Lokasi "/>

        <EditText
            android:id="@+id/id"
            android:layout_width="217dp"
            android:layout_column="3"
            android:textSize="15sp"
            android:singleLine="true"
            android:focusable="false"
            android:layout_gravity="left"
            android:layout_row="1"/>

        <TextView
            android:id="@+id/namaText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="3"
            android:text="Nama Lokasi "/>

        <EditText
            android:id="@+id/nama"
            android:layout_width="217dp"
            android:layout_column="3"
            android:focusable="false"
            android:textSize="15sp"
            android:layout_gravity="left"
            android:layout_row="3"/>

        <TextView
            android:id="@+id/lngText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="5"
            android:text="Longitude "/>

        <EditText
            android:id="@+id/lng"
            android:layout_column="3"
            android:textSize="15sp"
            android:focusable="false"
            android:singleLine="true"
            android:layout_width="217dp"
            android:layout_gravity="left"
            android:layout_row="5"/>

        <TextView
            android:id="@+id/latText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="7"
            android:text="Latitude "/>

        <EditText
            android:id="@+id/lat"
            android:layout_width="217dp"
            android:textSize="15sp"
            android:singleLine="true"
            android:focusable="false"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="7"/>

        <TextView
            android:id="@+id/tglText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="9"
            android:text="Tanggal "/>

        <EditText
            android:id="@+id/tgl"
            android:layout_width="217dp"
            android:textSize="15sp"
            android:singleLine="true"
            android:focusable="false"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="9"/>

        <TextView
            android:id="@+id/timeText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="11"
            android:text="Jam "/>

        <EditText
            android:id="@+id/waktu"
            android:layout_width="217dp"
            android:textSize="15sp"
            android:focusable="false"
            android:singleLine="true"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="11"/>

        <TextView
            android:id="@+id/idkText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="13"
            android:text="Id Kendaraan "/>

        <EditText
            android:id="@+id/idk"
            android:layout_width="217dp"
            android:textSize="15sp"
            android:singleLine="true"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="13"/>

        <Space
            android:layout_width="21dp"
            android:layout_height="1dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0" />

        <Space
            android:layout_width="101dp"
            android:layout_height="1dp"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0" />

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2" />

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4" />
        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="6" />
        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="8" />
        <Space
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="9" />

    </GridLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid1">

        <Button
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_update"
            android:onClick="update"
            android:text="Update"/>

        <Button
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:onClick="delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete"
            android:text="Delete"/>
    </RelativeLayout>

</RelativeLayout>
